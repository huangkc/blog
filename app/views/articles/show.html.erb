

<div class="row">
<div class="read-more">
  <p>
  <strong></strong>
  <%= @article.title %>
</p>

</div>

 
<p>
  <strong></strong>
  <%= @article.text %>
</p>


<h2></h2>
<% @article.comments.each do |comment| %>
	<p>Commenter:
		<%= comment.commenter %>
	</p>
	<p>Comment:
		<%= comment.body%>
	</p>
<% end %>

<h2>what do you think?</h2>
<%= form_for([@article, @article.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit "Submit"%>
  </p>
<% end %>
