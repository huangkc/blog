
<header>
  <div class="container">
    
      <h4 id="logo"><%= link_to "MicroBlog", root_path %>
      </h4>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "About", about_path %></li>
        <!-- <li><%= link_to "Contact", contact_path %></li> -->
				<li><%= link_to 'News', controller: 'articles' %></li>

