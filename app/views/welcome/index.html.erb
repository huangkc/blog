<% if logged_in? %>
  <div class="row">
        <aside class="col-md-4">
          <section class="user_info">
            <%= render 'shared/user_info' %>
          </section>
          <section class="micropost_form">
            <%= render 'shared/micropost_form' %>
          </section>
        </aside>

        <div class="col-md-8">
          <h3>MicroBlog Post Feed</h3>
          <%= render 'shared/feed' %>
        </div>
  </div>

<% else %>

<div class="row">
  <div class="jumbo">
    <div class="container">
      <p>MICROBLOG</p>
      <p>description, introduction etc.</p>
      <p class="start-button"><%= link_to "GET STARTED", signup_path, class: "btn-sm" %>
    </div>
  </div>
</div>

<% end %>

